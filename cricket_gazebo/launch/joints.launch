<launch>
  <arg name="model" default="$(find cricket_robot)/urdf_model/cricket_robot.urdf"/>
  <arg name="rvizconfig" default="$(find cricket_robot)/rviz/urdf.rviz" />

  <include file="$(find cricket_robot)/launch/gazebo.launch">
    <arg name="model" value="$(arg model)" />
  </include>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" />

  <rosparam command="load"
            file="$(find cricket_robot)/config/joints.yaml"
            ns="cricket_joint_state_controller" />

  <node name="cricket_controller_spawner" pkg="controller_manager" type="spawner"
    args="cricket_joint_state_controller
          --shutdown-timeout 3"/>
</launch>